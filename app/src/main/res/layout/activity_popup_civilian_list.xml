<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:background="#FFFFFF"
    tools:context="home.safe.com.myguarder.ActivityPopupCivilianList">
    <TextView
        android:id="@+id/tvCivilianTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:text="피지킴이 목록"/>
    <ListView
        android:id="@+id/lvCivilianList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCivilianEnter"
        android:layout_below="@+id/tvCivilianTitle"
        android:listSelector="@drawable/selector_civilian_list"/>
    <Button
        android:id="@+id/btnCivilianEnter"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="확인"
        />

</RelativeLayout>
