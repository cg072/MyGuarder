<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:background="#FFFFFF"
    tools:context="home.safe.com.myguarder.ActivityPopupCycle">

    <TextView
        android:id="@+id/tvCycle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:text="전송 주기"/>

    <Spinner
        android:id="@+id/spinnerCycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCycle"
        android:layout_above="@+id/btnCycle"
        android:entries="@array/listCycle"/>


    <Button
        android:id="@+id/btnCycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:text="확인"/>


</RelativeLayout>
