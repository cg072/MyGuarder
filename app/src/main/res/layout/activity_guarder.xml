<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="home.safe.com.myguarder.ActivityGuarder">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!--
       * @author 경창현
       * @version 1.0.0
       * @text NaverMap Fragment 들어갈 자리
       *       id  : fragMapHere
       * @since 2017-11-06 오후 11:46
      -->
        <RelativeLayout
            android:id="@+id/fragMapHere"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:background="#000000"
            android:elevation="5dp">

            <Button
                android:id="@+id/btnGuarderLog"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:text="지난위치보기"
                android:textSize="13dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tvJikimNameGuarder"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="피지킴이명"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvTransNameGuarder"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvJikimNameGuarder"
                android:text="이동수단명"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvMemoGuarder"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTransNameGuarder"
                android:text="메모"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvJikimNameThisGuarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvJikimNameGuarder"
                android:gravity="center_horizontal"
                android:text="경 창현"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvTransNameThisGuarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvJikimNameThisGuarder"
                android:layout_toRightOf="@+id/tvTransNameGuarder"
                android:gravity="center_horizontal"
                android:text="택시"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvMemoThisGuarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTransNameThisGuarder"
                android:layout_toRightOf="@+id/tvMemoGuarder"
                android:gravity="center_horizontal"
                android:text="서울 1003"
                android:textSize="20dp" />

        </RelativeLayout>


        <Button
            android:id="@+id/btnLocation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="위치 정보 요청" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
