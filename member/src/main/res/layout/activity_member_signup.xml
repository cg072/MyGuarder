<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@color/colorBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="80dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회 원 가 입"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/signup_EmptyDistance">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textHeight"
                    android:text="ID"
                    android:textSize="@dimen/textConfig"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="@drawable/tv_round_signup"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textHeight"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/etID"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textHeight"
                        android:textSize="@dimen/textConfig"
                        android:background="@color/colorWhite"
                        android:paddingStart="10dp"
                        android:layout_weight="2"
                        />
                    <Button
                        android:id="@+id/btnDuplicationID"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/textHeight"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textConfig"
                        android:text="중복"
                        android:background="@drawable/btn_round_signup"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/signup_EmptyDistance">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="PWD"
                    android:textSize="@dimen/textConfig"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="@drawable/tv_round_signup"/>
                <EditText
                    android:id="@+id/etPWD"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="@dimen/textConfig"
                    android:background="@drawable/et_round_signup"
                    android:paddingStart="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/signup_EmptyDistance">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textHeight"
                    android:text="Name"
                    android:textSize="@dimen/textConfig"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="@drawable/tv_round_signup"/>
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="@dimen/textConfig"
                    android:background="@drawable/et_round_signup"
                    android:paddingStart="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/signup_EmptyDistance">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Phone"
                    android:textSize="@dimen/textConfig"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="@drawable/tv_round_signup"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textHeight"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textHeight"
                        android:textSize="@dimen/textConfig"
                        android:paddingStart="10dp"
                        android:background="@color/colorWhite"
                        android:layout_weight="2"
                        />
                    <Button
                        android:id="@+id/btnCertificationPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/textHeight"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textConfig"
                        android:text="인증"
                        android:background="@drawable/btn_round_signup"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/signup_EmptyDistance">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Birth"
                    android:textSize="@dimen/textConfig"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="@drawable/tv_round_signup"/>
                <EditText
                    android:id="@+id/etBirth"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="@dimen/textConfig"
                    android:hint="예) 19701201"
                    android:background="@drawable/et_round_signup"
                    android:paddingStart="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/signup_EmptyDistance">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="E-Mail"
                    android:textSize="@dimen/textConfig"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="@drawable/tv_round_signup"/>
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="@dimen/textConfig"
                    android:background="@drawable/et_round_signup"
                    android:paddingStart="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/signup_EmptyDistance">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textHeight"
                    android:text="Gender"
                    android:textSize="@dimen/textConfig"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="@drawable/tv_round_signup"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textHeight"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="@color/colorWhite">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/textHeight"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbUndefine"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/textHeight"
                            android:checked="true"
                            android:text="미지정   "
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorBackground"></LinearLayout>

                        <RadioButton
                            android:id="@+id/rbFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/textHeight"
                            android:layout_marginRight="25dp"
                            android:text="여자"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorBackground"></LinearLayout>

                        <RadioButton
                            android:id="@+id/rbMale"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/textHeight"
                            android:text="남자 "
                            android:textSize="15dp" />
                    </RadioGroup>



                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_round_login"
                android:text="확   인"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


