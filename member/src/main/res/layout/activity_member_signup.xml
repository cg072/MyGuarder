<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@color/colorBackground"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회 원 가 입"
                android:textSize="45dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="@dimen/signup_EmptyDistance"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etID"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:background="@drawable/et_round_signup"
                    android:hint="필수) 영숫자 혼합 6~15 자"
                    android:textColorHint="@color/colorAccent"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:gravity="left|center"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btnDuplicationID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/btn_round_signup"
                    android:text="중복"
                    android:textSize="@dimen/textSize" />
            </LinearLayout>

            <EditText
                android:id="@+id/etPWD"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/et_round_signup"
                android:hint="필수) Passowrd  7자리 이상"
                android:textColorHint="@color/colorAccent"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:gravity="left|center"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="@dimen/textSize"
                android:layout_margin="@dimen/signup_EmptyDistance"/>

            <EditText
                android:id="@+id/etCheckPWD"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/et_round_signup"
                android:hint="필수) Password 확인 입력"
                android:textColorHint="@color/colorAccent"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:gravity="left|center"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="@dimen/textSize"
                android:layout_margin="@dimen/signup_EmptyDistance"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/et_round_signup"
                android:hint="필수) 이름 기재란"
                android:textColorHint="@color/colorAccent"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:gravity="left|center"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="@dimen/textSize"
                android:layout_margin="@dimen/signup_EmptyDistance"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_margin="@dimen/signup_EmptyDistance">

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@drawable/et_round_signup"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/textSize" />

                <Button
                    android:id="@+id/btnCertificationPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/btn_round_signup"
                    android:text="인증"
                    android:textSize="@dimen/textSize" />
            </LinearLayout>

            <EditText
                android:id="@+id/etBirth"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/et_round_signup"
                android:hint="예) 19701201"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="@dimen/textSize"
                android:layout_margin="@dimen/signup_EmptyDistance"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/et_round_signup"
                android:hint="예) 이메일@도메인.com"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="@dimen/textSize"
                android:layout_margin="@dimen/signup_EmptyDistance"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="@dimen/signup_EmptyDistance"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tv_round_signup"
                    android:gravity="center"
                    android:text="성별"
                    android:textSize="@dimen/textSize" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/colorBackground"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbUndefine"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="미지정"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_marginRight="2dp"
                            android:background="@color/colorWhite"/>

                        <RadioButton
                            android:id="@+id/rbFemale"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="여자"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_marginRight="2dp"
                            android:background="@color/colorWhite"/>

                        <RadioButton
                            android:id="@+id/rbMale"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="남자"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:background="@color/colorWhite"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_round_login"
                android:text="확   인"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


